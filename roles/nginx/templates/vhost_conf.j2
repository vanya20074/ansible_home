server {
        listen {{nginx_port}};
        listen [::]:{{nginx_port}};

        root /var/www/{{vhosts[0]}};
        index index.html index.htm index.nginx-debian.html;

        server_name {{vhosts[0]}};

        location / {
                try_files $uri $uri/ =404;
        }
}

